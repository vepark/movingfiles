from selenium import webdriver
from selenium.webdriver.common.by import By
from selenium.webdriver.support.ui import WebDriverWait
from selenium.webdriver.support import expected_conditions as EC
import time
import pandas as pd
import os

# Tableau report URL
tableau_url = "https://your-tableau-server.com/views/YourWorkbookName"

# Initialize Selenium WebDriver (no explicit path required if in PATH)
driver = webdriver.Chrome()  # Use `webdriver.Edge()` or `webdriver.Firefox()` if using Edge or Firefox

try:
    # Open Tableau report
    driver.get(tableau_url)

    # Wait for Tableau iframe to load
    WebDriverWait(driver, 10).until(EC.presence_of_element_located((By.TAG_NAME, "iframe")))

    # Switch to the Tableau iframe
    iframe = driver.find_element(By.TAG_NAME, "iframe")
    driver.switch_to.frame(iframe)

    # Click the "Download" button
    download_button = WebDriverWait(driver, 10).until(
        EC.element_to_be_clickable((By.XPATH, "//button[contains(text(), 'Download')]"))
    )
    download_button.click()

    # Select "Crosstab" or "Excel" from the dropdown
    crosstab_option = WebDriverWait(driver, 10).until(
        EC.element_to_be_clickable((By.XPATH, "//button[contains(text(), 'Crosstab')]"))
    )
    crosstab_option.click()

    # Wait for the file to download (adjust wait time as needed)
    time.sleep(15)  # This depends on your network and Tableau Server speed

    # Get the most recent file from the Downloads folder
    download_folder = os.path.expanduser("~\\Downloads")
    files = [os.path.join(download_folder, f) for f in os.listdir(download_folder)]
    latest_file = max(files, key=os.path.getctime)  # Get the latest file by creation time

    # Load the Excel file into a Pandas DataFrame
    df = pd.read_excel(latest_file)
    print("Excel data successfully loaded into DataFrame!")

    # Display the DataFrame to the user (optional)
    import ace_tools as tools
    tools.display_dataframe_to_user(name="Tableau DataFrame", dataframe=df)

finally:
    # Close the browser
    driver.quit()
