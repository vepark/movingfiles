
from pdfdiff import diff

# Define the paths to the PDF files
file_a_path = "file1.pdf"
file_b_path = "file2.pdf"

try:
    # Open and read both files as binary
    with open(file_a_path, "rb") as file_a:
        content_a = file_a.read()
    with open(file_b_path, "rb") as file_b:
        content_b = file_b.read()

    # Perform the diff comparison
    result = diff(content_a, content_b)

    # Print the result
    print(result)

except FileNotFoundError as e:
    print(f"Error: {e}")






import PyPDF2
import difflib

# Function to extract text from a PDF file
def extract_text_from_pdf(file_path):
    with open(file_path, "rb") as file:
        reader = PyPDF2.PdfReader(file)
        text = ""
        for page in reader.pages:
            text += page.extract_text()
        return text

# Paths to the PDF files
file_a_path = "123.pdf"
file_b_path = "456.pdf"

try:
    # Extract text from both PDFs
    text_a = extract_text_from_pdf(file_a_path)
    text_b = extract_text_from_pdf(file_b_path)

    # Use difflib to compare the text
    diff = difflib.unified_diff(
        text_a.splitlines(),
        text_b.splitlines(),
        fromfile="File A",
        tofile="File B",
        lineterm=""
    )

    # Print the differences line by line
    for line in diff:
        print(line)

except FileNotFoundError as e:
    print(f"Error: {e}")
except Exception as e:
    print(f"An unexpected error occurred: {e}")
