  set your_input_dataset;

  /* Convert to uppercase and strip */
  full = strip(full_name);

  /* Extract last and second-to-last words (keep hyphens) */
  last_word = prxchange('s/[^A-Z\-]+//i', -1, scan(full, -1, ' '));
  second_last_word = prxchange('s/[^A-Z\-]+//i', -1, scan(full, -2, ' '));

  /* Check if last word is a suffix */
  if upcase(last_word) in ("JR", "SR", "II", "III", "IV", "V") or lengthn(last_word) <= 2 then
    cleaned_last_name = second_last_word;
  else
    cleaned_last_name = last_word;

